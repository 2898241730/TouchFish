<view class="container">
  <!-- 顶部标题区域 -->
  <view class="header">
    <view class="title">我要摸够{{dailyGoal}}小时</view>
    <van-icon name="edit" size="20px" color="#8B5CF6" bind:click="showGoalPopup" />
  </view>

  <!-- 日历组件 -->
  <view class="calendar-container">
    <view class="calendar-header">
      <van-icon name="arrow-left" size="20px" color="#8B5CF6" bind:click="prevMonth" />
      <view class="month-year">{{currentYear}}年{{currentMonth}}月</view>
      <van-icon name="arrow" size="20px" color="#8B5CF6" bind:click="nextMonth" />
    </view>
    
    <view class="calendar-grid">
      <view class="weekdays">
        <view class="weekday" wx:for="{{weekdays}}" wx:key="index">{{item}}</view>
      </view>
      
      <view class="days">
        <view 
          class="day {{item.isCurrentMonth ? 'current-month' : 'other-month'}}" 
          wx:for="{{calendarDays}}" 
          wx:key="index"
        >
          <view class="day-number">{{item.day}}</view>
          <view class="progress-circle" wx:if="{{item.isCurrentMonth && item.progress >= 0}}">
            <view 
              class="progress-fill" 
              style="background: conic-gradient(from 0deg, #8B5CF6 0deg, #A855F7 {{item.progress * 3.6}}deg, #E5E7EB {{item.progress * 3.6}}deg)"
            ></view>
            <view class="progress-text">{{item.hours}}h</view>
          </view>
        </view>
      </view>
    </view>
  </view>

  <!-- 摸鱼按钮 -->
  <view class="fish-button-container">
    <van-button 
      class="fish-button" 
      type="primary" 
      size="large"
      bind:click="addFishingTime"
    >
      摸
    </van-button>
  </view>

  <!-- 目标设置弹窗 -->
  <van-popup 
    show="{{showGoalDialog}}" 
    position="center" 
    round
    bind:close="hideGoalPopup"
  >
    <view class="goal-popup">
      <view class="popup-title">每日摸鱼目标</view>
      <view class="slider-container">
        <view class="slider-label">目标时长：{{tempGoal}}小时</view>
        <van-slider 
          value="{{tempGoal}}" 
          min="1" 
          max="12" 
          step="0.5"
          active-color="#8B5CF6"
          bind:change="onGoalChange"
        />
      </view>
      <view class="popup-buttons">
        <van-button 
          class="popup-button cancel" 
          bind:click="hideGoalPopup"
        >
          取消
        </van-button>
        <van-button 
          class="popup-button confirm" 
          type="primary"
          bind:click="confirmGoal"
        >
          确认
        </van-button>
      </view>
    </view>
  </van-popup>

  <!-- Toast 提示 -->
  <van-toast id="van-toast" />
</view> 